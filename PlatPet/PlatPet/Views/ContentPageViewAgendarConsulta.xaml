<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlatPet.Views.ContentPageViewAgendarConsulta">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout BackgroundColor="#FFFCCF">
                <Label Text="{Binding NFantasiaEmpresa}"/>
            <Entry Text="{Binding NFantasiaEmpresa}" IsEnabled="False"></Entry>
            <Label Text="Serviço"/>
            <Entry IsEnabled="False"></Entry>
            <Label Text="Pet" />
                <Picker Title="Selecione seu Pet" ItemsSource="{Binding PetsG}"  ItemDisplayBinding="{Binding NomePet}" SelectedItem="{Binding Pets}"/>

                <Label Text="Tipo de Serviço" />
                <Picker Title="Selecione o tipo de Serviço" ItemsSource="{Binding ServComEmp}"  ItemDisplayBinding="{Binding NomeServico}">
                
            </Picker>
            <Label Text="Valor Total"/>
            <Label Text="Forma de Pagamento"/>
                <Picker Title="Forma de Pagamento" ItemsSource="{Binding PagG}" ItemDisplayBinding="{Binding DescPagamento}"/>
                <Button Text="Confirmar" CornerRadius="100" BackgroundColor="#E28249" IsEnabled="True" Command="{Binding GravarCommand}"></Button>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
